#!/usr/bin/with-contenv bash
# ==============================================================================
# Starts server to serve the app
# ==============================================================================
echo 'Run Home Panel..'

# shellcheck disable=SC2164
cd /opt/panel

DB_PATH=/data/home-panel.db
SSL_PATH_CERT=/ssl/%SSL_CERTFILE%
SSL_PATH_KEY=/ssl/%SSL_KEYFILE%

export DB_PATH
export CONFIG_PATH
export SSL_PATH_CERT
export SSL_PATH_KEY

exec node src/
